package com.eshop.platform.entity;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;
import lombok.Data;

@Data
public class UpdateUser {
    @Size(min = 3, max = 30, message = "Username's length must be between 3 - 30 characters")
	private String username;
	
    @NotNull(message = "Password must not be null")
    @Size(min = 7, max = 50, message = "Password's length must be between 7 - 50 characters")
    @Pattern(regexp = "^(?=.*\\\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%]).{7,50}$", message = "")
	private String password;
    
    @Size(min = 7, max = 50, message = "New password's length must be between 7 - 50 characters")
	private String newPassword;
    
    @Email(regexp = "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}", message = "Email must be valid")
	private String email;
    
    @Size(min = 1, max = 30, message = "First name's length must be between 1 - 30 characters")
	private String firstName;
    
    @Size(min = 1, max = 30, message = "Last name's length must be between 1 - 30 characters")
	private String lastName;
    
	private String address;
}
