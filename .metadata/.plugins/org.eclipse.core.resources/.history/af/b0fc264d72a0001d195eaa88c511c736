package com.eshop.platform;

import static com.eshop.platform.constants.UserConstants;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;
import lombok.Data;

@Data
public class UserDTO {
	private Long id;
	
	@Size(min = 3, max = 30, message = UserConstants.USERNAME_LENGTH)
	private String username;
	
	@Pattern(regexp = "^(?=.*\\\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%]).{7,50}$", 
    		message = "Password's length must be between 7 - 50 characters "
    				+ "and contain at least 1 numeric value, 1 uppercase character and 1 special symbol")
	private String password;
	
	@Email(regexp = "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}", message = "Email must be in a valid format")
	private String email;
	
	@Size(min = 1, max = 30, message = "First name's length must be between 1 - 30 characters")
	private String firstName;
	
	@Size(min = 1, max = 30, message = "Last name's length must be between 1 - 30 characters")
	private String lastName;
	
	@Size(min = 1, max = 50, message = "Address's length must be between 1 - 50 characters")
	private String address;
	
	private Role role;
}
